{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    /* üåê Output & File Layout */
    "rootDir": "./src",               // where your .ts files are
    "outDir": "./dist",               // compiled .js files go here

    /* ‚öôÔ∏è Environment Settings */
    "target": "ES2017",               // support async/await & Promises
    "module": "ESNext",               // keep modern import/export syntax
    "lib": ["DOM", "ES2017"],         // include browser & modern JS APIs
    "moduleResolution": "node",       // standard module lookup
    "allowJs": false,                 // only compile .ts files
    "isolatedModules": true,

    /* üß© Type Checking */
    "strict": true,                   // enable all strict checks
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,             // skip type checking libraries

    /* üß≠ Output Options */
    "sourceMap": true,                // generate .map files (debugging)
    "declaration": false,             // don't emit .d.ts (you don‚Äôt need this for frontend)
    "declarationMap": false,

    /* ‚ú® Code Style & Safety */
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true
  },

  /* üì¶ Include & Exclude */
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
